profile laptop {
    output eDP-1 enable mode 1920x1080@60 scale 1 position 0,0

    exec hyprpaper
}
profile docked {
    output eDP-1 disable
    output HDMI-A-1 enable mode 1920x1080@60 scale 1 position 0,0
    output DP-1 enable mode 1920x1080@60 scale 1 position 1920,0

    exec hyprpaper
}
profile tv {
    output HDMI-A-1 enable mode 1920x1080@60 scale 1 position 0,0
    output eDP-1 enable mode 1920x1080@60 scale 1 position 0,1080

    exec hyprpaper
}
